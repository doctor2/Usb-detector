            <DataGrid x:Name="Table" Margin="20,30,20,30" AutoGenerateColumns="False" IsReadOnly="True"                   
                       ItemsSource="{Binding}"  RowBackground="#FFFFFF" AlternatingRowBackground="#ECECEC" 
                      HorizontalScrollBarVisibility="Auto">
